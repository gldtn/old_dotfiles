#KeyClu[Window Focus]: Focus space 10
alt - 0 : yabai -m space --focus 10

#KeyClu[Send Window]: Send window to space 1 & follow focus
alt + shift - 1 : yabai -m window --space 1; yabai -m space --focus 1

#KeyClu[Send Window]: Send window to space 2 & follow focus
alt + shift - 2 : yabai -m window --space 2; yabai -m space --focus 2

